<h1><%= @day.date.strftime("%d %A %Y") %></h1>

<% if @day.pain_rate.nil? && @day.comment.blank? %>
  <h4>Aucune information enregistrée</h4>
<% else %>
  <% if @day.pain_rate %>
    <h4>Douleur: <%= @day.pain_rate %>/10</h4>
  <% end %>
  <% if @day.comment %>
    <h4><%= @day.comment %></h4>
  <% end %>
<% end %>

<% if @day.date.today? %>
  <%= link_to "Comment te sens tu aujourd'hui?", edit_day_path(@day.id) %>
<% else %>
  <%= link_to "Comment te sentais tu ?", edit_day_path(@day.id) %>
<% end %>

<br/>

<% if @day.date.today? %>
  <%= link_to "Ajouter un Pooh", new_day_pooh_path(@day.id) %>
<% else %>
  <%= link_to "Ajouter un Pooh pour cette journée", new_day_pooh_path(@day.id) %>
<% end %>

<br/>

<% if @day.date.today? %>
  <h3><%= @day.pooh.count %> <%= 'pooh'.pluralize(@day.pooh.count + 1) %> aujourd'hui</h3>
<% else %>
  <h3><%= @day.pooh.count %> <%= 'pooh'.pluralize(@day.pooh.count + 1) %> pour cette journée</h3>
<% end %>
<% @day.pooh.each do |pooh| %>
  <% if pooh.blood %>
    <i class="fas fa-circle red-circle"><%= pooh.rate %></i>
  <% else %>
    <i class="fas fa-circle green-circle"><%= pooh.rate %></i>
  <% end %>
<% end %>
<br/>
<%= link_to "Ajouter un repas pour cette journée", new_day_meal_path(@day.id) %>
<br/>
<% @day.meals.each do |meal| %>
  <%= link_to meal.type, day_meal_path(@day.id, meal.id) %>
  <% meal.ingredients.each do |ingredient| %>
    <br/>
      <%= link_to ingredient.name, day_meal_ingredient_path(@day.id, meal.id, ingredient.id) %>
  <% end %>
<br/>
<% end %>

<h3>Total :</h3>
<h3><%= @day.total('energykcal') %> <%= "kilocalorie".pluralize(@day.total('energykcal')) %></h3>

