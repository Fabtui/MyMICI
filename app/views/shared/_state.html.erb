<div class="slice-today-item item-state">
  <div class="slice-today-item-head">
    <h3>Mon état</h3>
    <%= link_to edit_day_path(@day.id) do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
  </div>
    <% if @day.pain_rate.nil? && @day.comment.blank? %>
      <h6>Aucune information enregistrée</h6>
    <% else %>
      <% if @day.comment %>
        <h6><%= @day.comment %></h6>
      <% end %>
    <% end %>
  <div class="slice-today-item-bottom">
    <% if @day.pain_rate %>
      <h4>Douleur: <%= @day.pain_rate %>/10</h4>
    <% end %>
  </div>
</div>
