<h3>Valeur nutritive pour <%= @ingredient.name %> (<%= @meal_ingredient.quantity.round %>g)</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">El√©ments</th>
      <th scope="col">pour 100g</th>
      <th scope="col">pour <%= @meal_ingredient.quantity.round %>g</th>
    </tr>
  </thead>
  <tbody>
      <% CATEGORIES.last(67).each do |category| %>
        <% cat = category[0].to_sym %>
        <tr>
          <th scope="row"> <%= category[0].capitalize %> ( <%= category[1] %> )</th>
          <td><%= @ingredient.send cat %></td>
          <td><%= ((@ingredient.send cat) * (@meal_ingredient.quantity / 100)).round %></td>
        </tr>
      <% end %>
  </tbody>
</table>
