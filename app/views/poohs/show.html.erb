<div class="container">
  <div class="back-link">
    <%= link_to day_path(@pooh.day.id) do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  </div>

  <div class="form-title">
    <h4>Pooh du <%= I18n.localize(@pooh.day.date, format: :long)  %></h4>
    <h6>Engeristré le <%= I18n.localize(@pooh.created_at, format: :long) %> à <%= I18n.localize(@pooh.created_at, format: :hours) %></h6>
  </div>
  <h4>Consistance: <%= @pooh.rate %>/10</h4>
  <h4>Sang: <%= @pooh.blood ? "Oui" : "Non" %></h4>

  <div class="form-buttons">
    <%= link_to "Supprimer", day_pooh_path(@pooh.day.id, @pooh.id), method: :delete, class:"btn btn-danger"  %>
    <%= link_to "Editer", edit_day_pooh_path(@pooh.day.id, @pooh.id), class:"btn btn-success" %>
  </div>
</div>
