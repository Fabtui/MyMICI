<div class="slice-today-item item-state">
  <% @suspicious_ingredients.each do |i| %>
    <ul>
      <li><%= i.name %></li>
    </ul>
  <% end %>
  <% @crises.each do |crisis| %>
    <ul>
      <li><%= crisis.start_date %> - <%= crisis.end_date %></li>
    </ul>
  <% end %>

  <%  @suspicious_elements.each do |element| %>
    <ul>
      <li><%= element %></li>
    </ul>
  <% end %>

</div>
