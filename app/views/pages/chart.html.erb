<div class="chart">
  <% data = [] %>
  <% data_hash = {} %>
  <% @days.map do |day|
    data_hash[day.date] = day.pain_rate
  end %>
  <% data = [{name: 'Douleur', data: data_hash}] %>
  <% @days.map do |day|
    data_hash[day.date] = day.pooh.count
  end %>
  <% data = [{name: 'Poohs', data: data_hash}] %>

  <% @preferences.each do |preference|
    data_hash = {}
    @days.each do |day|
      ajr = @categories.select { |a| a[0] === preference.name }
      data_hash[day.date] = (day.total(preference.name).fdiv(ajr.first[2]/5)).ceil
    end
    data << {name: preference.name.capitalize, data: data_hash}
  end %>

  <%= line_chart data, download: {filename: "chart"} %>
</div>
