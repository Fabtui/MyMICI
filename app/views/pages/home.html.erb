<div id="home-container">
  <div class="home-slice slice-today">
    <h3>Aujourd'hui</h3>
    <h2><%= @day.date.strftime("%d %A %Y") %></h2>
    <div class="slice-today-container">
      <div class="slice-today-item item-state">
        <%= render 'shared/state' %>
      </div>
      <div class="slice-today-item item-pooh">
        <%= render 'shared/pooh' %>
      </div>
    </div>
    <div class="slice-today-item">
      <%= render 'shared/meal' %>
    </div>
    <%= link_to "Voir mes journées", days_path %>
    <%= link_to "Créer une nouvelle journée", new_day_path %>
    <br/>
  </div>
  <div class="home-slice slice-total">
    <%= render 'shared/total' %>
    <%= link_to "Valeurs à suivre", new_user_preference_path %>
  </div>
  <div class="home-slice slice-graph">
    <%= link_to "Graphique", chart_path %>
  </div>
</div>
