<div class="container">
  <div class="form-title">
    <h1>Nouveau repas pour le <%= I18n.localize(@day.date, format: :long) %> </h1>
  </div>

  <%= simple_form_for [@day, @meal] do |f| %>
    <%= f.input :meal_type_id, collection: MealType.all, label: 'Type de repas' %>
      <div class="form-buttons">
        <%= link_to "Annuler", :back, class: "btn btn-danger btn-annuler" %>
        <%= f.submit "Ajouter", class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
